version: '3.1' 
services:   
  grafana:     
    container_name: grafana   
    image: "grafana/grafana:6.0.2"
    ports:
     - "{{ grafana_external_port }}:3000"
    user: "3000:3000"
    environment:
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_secutiry_admin_password }}
    volumes:
      - {{ grafana_volume_data }}:/var/lib/grafana
    restart: always
